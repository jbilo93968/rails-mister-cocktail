<div class="card-show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @cocktail.photo, height: 600, width: 3000, crop: :fill %>');">
  <div class="card-description">
    <h2><%= @cocktail.name %></h2>
  </div>
</div>

<div class="container">

  <div class="row text-center">
    <div class="col-xs-12">
      <h2> Ingredients </h2>
        <hr>
          <ul class="list-unstyled" class="text-center">
            <% @cocktail.doses.each do |dose| %>
              <li>
                <%= dose.description %> - <%= dose.ingredient.name %> -
                <%= link_to edit_cocktail_dose_path(@cocktail, dose) do %>
                  <i class="fa fa-pencil" aria-hidden="true"></i>
                <% end %>
                <%= link_to dose_path(dose), method: :delete, data: {confirm: "Etes-vous certain de vouloir supprimer cet ingrÃ©dient?"} do  %>
                    <i class="fa fa-trash-o fa-fw"></i>
                <% end %>
              </li>
            <% end %>
          </ul>
        <hr>
        <ul class="list-inline product-controls hidden-sm hidden-xs">
          <%= render 'shared/product-controls' %>
        </ul>
      </div>
    </div>

  <div class="row padded text-center">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <%= link_to "Ajouter une dose", new_cocktail_dose_path(@cocktail), {class: "btn btn-success"} %>
      <%= link_to "Retour", root_path, {class: "btn btn-primary"} %>
      <%= link_to "Supprimer le cocktail", cocktail_path(@cocktail), class: "btn btn-danger", method: :delete, data: {confirm: "Etes-vous certain de vouloir supprimer ce cocktail?"} %>
    </div>
  </div>

</div>

